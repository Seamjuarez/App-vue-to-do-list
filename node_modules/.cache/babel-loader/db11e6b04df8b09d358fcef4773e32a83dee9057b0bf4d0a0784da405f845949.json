nput.focus()\r\n      } catch (error) {\r\n        console.error('Error adding todo:', error)\r\n      } finally {\r\n        this.loading = false\r\n      }\r\n    }\r\n  },\r\n  mounted() {\r\n    this.$refs.todoInput.focus()\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.todo-form {\r\n  margin-bottom: 24px;\r\n}\r\n\r\n.form-group {\r\n  display: flex;\r\n  gap: 12px;\r\n  align-items: center;\r\n}\r\n\r\n.todo-input {\r\n  flex: 1;\r\n  padding: 12px 16px;\r\n  border: 2px solid #e0e0e0;\r\n  border-radius: 8px;\r\n  font-size: 16px;\r\n  outline: none;\r\n  transition: border-color 0.3s ease;\r\n}\r\n\r\n.todo-input:focus {\r\n  border-color: #007bff;\r\n}\r\n\r\n.todo-input:disabled {\r\n  background-color: #f8f9fa;\r\n  cursor: not-allowed;\r\n}\r\n\r\n.add-btn {\r\n  padding: 12px 20px;\r\n  background-color: #007bff;\r\n  color: white;\r\n  border: none;\r\n  border-radius: 8px;\r\n  font-size: 16px;\r\n  cursor: pointer;\r\n  transition: background-color 0.3s ease;\r\n  display: flex;\r\n  align-items: center;\r\n  gap: 8px;\r\n  min-width: 120px;\r\n  justify-content: center;\r\n}\r\n\r\n.add-btn:hover:not(:disabled) {\r\n  background-color: #0056b3;\r\n}\r\n\r\n.add-btn:disabled {\r\n  background-color: #6c757d;\r\n  cursor: not-allowed;\r\n}\r\n\r\n@media (max-width: 768px) {\r\n  .form-group {\r\n    flex-direction: column;\r\n  }\r\n  \r\n  .todo-input {\r\n    width: 100%;\r\n  }\r\n  \r\n  .add-btn {\r\n    width: 100%;\r\n  }\r\n}\r\n</style>"],"mappings":"AAyBA,eAAe;EACbA,IAAI,EAAE,UAAU;EAChBC,KAAK,EAAE,CAAC,UAAU,CAAC;EACnBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,OAAO,EAAE,EAAE;MACXC,OAAO,EAAE;IACX;EACF,CAAC;EACDC,OAAO,EAAE;IACP,MAAMC,OAAOA,CAAA,EAAG;MACd,IAAI,CAAC,IAAI,CAACH,OAAO,CAACI,IAAI,CAAC,CAAC,EAAE;MAE1B,IAAI,CAACH,OAAM,GAAI,IAAG;MAClB,IAAI;QACF,MAAM,IAAI,CAACI,KAAK,CAAC,UAAU,EAAE,IAAI,CAACL,OAAO,CAACI,IAAI,CAAC,CAAC;QAChD,IAAI,CAACJ,OAAM,GAAI,EAAC;QAChB,IAAI,CAACM,KAAK,CAACC,SAAS,CAACC,KAAK,CAAC;MAC7B,EAAE,OAAOC,KAAK,EAAE;QACdC,OAAO,CAACD,K